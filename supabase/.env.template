# Supabase Edge Functions Environment Variables
# Copy this file to .env and fill in your values
# For production, use: npx supabase secrets set KEY=value

# ============================================================================
# AWS Configuration
# ============================================================================
# Required for all AWS operations (Chime, Transcribe, CloudWatch, S3, Step Functions, Bedrock)
# NOTE: Step Functions SOAP workflow uses us-east-1 (Claude Opus 4.5 availability)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# ============================================================================
# Transcription Configuration
# ============================================================================
# Cost control - prevents runaway transcription bills
DAILY_TRANSCRIPTION_BUDGET_USD=50

# Medical vocabulary for AWS Transcribe Medical (optional)
# Use when you have custom medical terminology needs
MEDICAL_VOCABULARY_NAME=medzen-medical-vocab

# Standard vocabulary for AWS Transcribe Standard (optional)
# Use for regional language support (e.g., Nigerian Pidgin, Camfranglais)
STANDARD_VOCABULARY_NAME=medzen-standard-vocab

# ============================================================================
# EHRbase Configuration
# ============================================================================
# OpenEHR clinical data repository
EHRBASE_URL=https://ehr.medzenhealth.app/ehrbase/rest
EHRBASE_USERNAME=ehrbase-user
EHRBASE_PASSWORD=your-ehrbase-password

# ============================================================================
# Environment
# ============================================================================
# Options: development, staging, production
ENVIRONMENT=production

# ============================================================================
# Firebase Configuration
# ============================================================================
# For FCM push notifications and authentication verification
FIREBASE_PROJECT_ID=medzen-bf20e
FIREBASE_DATABASE_URL=https://medzen-bf20e.firebaseio.com

